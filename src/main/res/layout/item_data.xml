<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher" />


        <com.example.sniffer.httpdownload.View.marqueeTextView
            android:id="@+id/tv_dataname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_downsize"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="名字"
            android:textColor="#0000FF"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_downsize"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_downsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_download" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
